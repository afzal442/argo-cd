{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>afzal442/argo-cd//renovate-presets/commons.json5",
    "github>afzal442/argo-cd//renovate-presets/custom-managers/shell.json5",
    "github>afzal442/argo-cd//renovate-presets/custom-managers/yaml.json5",
    "github>afzal442/argo-cd//renovate-presets/fix/disable-all-updates.json5",
    "github>afzal442/argo-cd//renovate-presets/devtool.json5",
    "github>afzal442/argo-cd//renovate-presets/docs.json5"
  ],
  "enabledManagers": ["helm-values"],
  "packageRules": [
    {
      "matchPackageNames": ["redis-ha"],
      "datasourceTemplate": "helm",
      "groupName": "redis-ha Helm Chart"
    }
  ],
  "postUpgradeTasks": {
    "commands": [
      "bash manifests/ha/base/redis-ha/generate.sh",
      "make manifests-local"
    ],
    "fileFilters": ["manifests/ha/base/redis-ha/**"]
  }
}
